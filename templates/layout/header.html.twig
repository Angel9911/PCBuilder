<header class="bg-white shadow-sm">
    <div class="max-w-7xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg"
                     width="24" height="24"
                     viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2"
                     stroke-linecap="round" stroke-linejoin="round"
                     class="lucide lucide-computer h-8 w-8 text-blue-600">
                    <rect width="14" height="8" x="5" y="2" rx="2"></rect>
                    <rect width="20" height="8" x="2" y="14" rx="2"></rect>
                    <path d="M6 18h2"></path>
                    <path d="M12 18h6"></path>
                </svg>
                <span class="ml-2 text-xl font-bold text-gray-900">PC Builder Pro</span>
            </div>
            <div class="hidden md:flex flex-1 max-w-xl mx-4">
                <div class="relative w-full">
                    <input type="text" placeholder="Търсене на продукти..." class="w-full px-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent bg-gray-50 transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search absolute right-3 top-3 h-5 w-5 text-gray-400">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.3-4.3"></path>
                    </svg>
                </div>
            </div>
            <button class="md:hidden p-2 text-gray-600 hover:text-blue-600 transition-colors">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search h-6 w-6">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.3-4.3"></path>
                </svg>
            </button>
            <div class="flex items-center space-x-4">
                <div class="hidden md:flex items-center space-x-4">
                    <a class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors" href="{{ path('home') }}">Начало</a>
                    <a class="px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors" href="/contact">Контакти</a>
                    <a class="hidden lg:block px-4 py-2 text-sm font-medium text-gray-700 hover:text-blue-600 transition-colors" href="/faq">Често задавани въпроси</a>
                </div>
                <div class="flex items-center space-x-2">
                    <button id="open-auth-modal" class="p-2 text-gray-600 hover:text-blue-600 transition-colors relative">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-user h-6 w-6">
                            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</header>
