<div class="px-4 py-4 sm:px-6">
    <!-- Component Header -->
    <div class="flex items-center justify-between mb-4">
        <div class="flex items-center">
            <!-- CPU Icon -->
            <div class="flex-shrink-0 bg-blue-100 rounded-md p-2">
                <img src="{{ asset(icon_path) }}" alt="{{ label }}" class="w-9 h-9">
            </div>
            <div class="ml-4">
                <h4 class="text-lg font-medium text-gray-900">{{ label }}</h4>
            </div>
        </div>
        <button class="text-sm text-blue-600 hover:text-blue-800 font-medium flex items-center" onclick="window.location.href='{{ filter_path }}">
            Advanced Filter
            <i data-lucide="Filter" class="inline-block h-4 w-4 ml-1"></i>
        </button>
    </div>

    <!-- Component Selection and Show Offers -->
    <div class="flex items-center space -x-4">
        <div class="relative flex-1">
            <select id="{{ id }}" data-component-id="{{ id }}" class="block w-full pl-3 pr-10 py-3 text-base border-gray-300 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm rounded-lg transition-shadow duration-150 hover:shadow-md group-hover:border-blue-300">
                <option value="">{{ default_option }}</option>
                {% for option in options %}
                    <option value="{{ option.id ?? option }}">{{ option.name ?? option }}</option>
                {% endfor %}
            </select>
            <!-- Spinner -->
            <div data-spinner-for="{{ id }}" class="loading-spinner hidden"></div>
            <div class="absolute inset-y-0 right-0 flex items-center pr-2 pointer-events-none">
                <i data-lucide="ChevronDown" class="h-5 w-5 text-gray-400"></i>
            </div>
        </div>

        <!-- Hide Offers Button -->
        <!-- Include the Hide Offers button -->
        {% include 'pages/pages_templates/hide-offer-template.html.twig' with { component_id: id } %}

    </div>

    <!-- Offers Section -->
    <!-- Hidden template for vendor offers -->
    <div class="mt-4 space-y-3 vendor-offers hidden" data-offers-for="{{ id }}"></div>

</div>