{% for configuration in configurations %}
<div class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105">
    <!-- Build Name Header -->
    <div class="bg-blue-600 px-4 py-2">
        <h3 class="text-lg font-medium text-white">{{ configuration.name }}</h3>
    </div>

    <!-- Component Details -->
    <div class="p-4">
        <ul class="space-y-2 mb-4">
            {% for component in configuration.cpu.components%}
            <li class="flex items-center text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="cpu" class="lucide lucide-cpu h-5 w-5 mr-2 text-blue-600"><rect x="4" y="4" width="16" height="16" rx="2"></rect><rect x="9" y="9" width="6" height="6"></rect><path d="M15 2v2"></path><path d="M15 20v2"></path><path d="M2 15h2"></path><path d="M2 9h2"></path><path d="M20 15h2"></path><path d="M20 9h2"></path><path d="M9 2v2"></path><path d="M9 20v2"></path></svg>
                <span class="text-sm">{{ component.component_name }}</span>
            </li>
            {% endfor %}
            {% for component in configuration.gpu.components%}
            <li class="flex items-center text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="gpu" class="lucide lucide-gpu h-5 w-5 mr-2 text-blue-600"><rect x="4" y="4" width="16" height="16" rx="2"></rect><rect x="9" y="9" width="6" height="6"></rect><path d="M15 2v2"></path><path d="M15 20v2"></path><path d="M2 15h2"></path><path d="M2 9h2"></path><path d="M20 15h2"></path><path d="M20 9h2"></path><path d="M9 2v2"></path><path d="M9 20v2"></path></svg>
                <span class="text-sm">{{ component.component_name }}</span>
            </li>
            {% endfor %}
            {% for component in configuration.motherboard.components%}
            <li class="flex items-center text-gray-700">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="motherboard" class="lucide lucide-motherboard h-5 w-5 mr-2 text-blue-600"><rect width="18" height="18" x="3" y="3" rx="2"></rect><path d="M11 9h4a2 2 0 0 0 2-2V3"></path><circle cx="9" cy="9" r="2"></circle><path d="M7 21v-4a2 2 0 0 1 2-2h4"></path><circle cx="15" cy="15" r="2"></circle></svg>
                <span class="text-sm">{{ component.component_name }}</span>
            </li>
            {% endfor %}
        </ul>

        <!-- Build Image -->
        <div class="aspect-w-16 aspect-h-9">
            <img src="https://images.unsplash.com/photo-1587202372775-e229f172b9d7?auto=format&fit=crop&q=80&w=300&h=300" alt="The Boom Build" class="object-cover w-full h-48 rounded-md">
        </div>

        <form action="{{ path('get.completed.build', { 'buildId':  configuration.id}) }}" method="POST">
            <!-- Приложи Button -->
            <button class="mt-4 w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition duration-300">
                Приложи
            </button>
        </form>
    </div>
</div>
{% endfor %}