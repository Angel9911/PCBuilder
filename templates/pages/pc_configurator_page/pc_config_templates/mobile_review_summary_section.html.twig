<div class="sm:hidden px-4">

    <!-- Build Summary Toggle Button -->
    <button
            onclick="
   const summary = document.getElementById('mobile-summary');
const icon = document.getElementById('expand-icon');
const tooltip = document.getElementById('mobile-summary-tooltip');

summary.classList.toggle('hidden');
icon.classList.toggle('rotate-90');

if (!summary.classList.contains('hidden')) {
  // Show tooltip for 4 seconds when expanding
  tooltip?.classList.remove('hidden');
  setTimeout(() => tooltip?.classList.add('hidden'), 8000);
}
  "
            class="w-full flex items-center justify-between px-4 py-3 text-sm font-medium
         bg-gradient-to-r from-purple-100 to-purple-200 hover:from-purple-200 hover:to-purple-300
         text-purple-800 rounded-xl shadow-md transition-all duration-300 group mb-3
         border border-purple-300 animate-pulse hover:animate-none"
    >
  <span class="flex items-center">
    <svg id="expand-icon" class="w-6 h-6 mr-2 text-purple-700 transition-transform duration-300"
         fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
      <path d="M9 5l7 7-7 7"></path>
    </svg>
<span class="font-semibold flex items-center">Build Summary</span>
  </span>
        <span class="text-xs text-purple-700">Tap to expand</span>
    </button>

    <!-- Hidden Summary Panel -->
    <div id="mobile-summary" class="hidden bg-white rounded-2xl shadow-lg p-4 space-y-4 border border-gray-100">

        <!-- Tooltip Banner (initially hidden) -->
        <div id="mobile-summary-tooltip"
             class="text-sm text-purple-800 bg-purple-100 border border-purple-300 px-3 py-2 rounded-md flex items-start gap-2">
            <svg class="w-4 h-4 mt-0.5 text-purple-600" xmlns="http://www.w3.org/2000/svg" fill="none"
                 viewBox="0 0 24 24" stroke="currentColor">
                <circle cx="12" cy="12" r="10"/>
                <line x1="12" y1="8" x2="12" y2="12"/>
                <line x1="12" y1="16" x2="12.01" y2="16"/>
            </svg>
            <span>This summary shows key info like price, power use, and AI tips for your build.</span>
        </div>
        <!-- Component Count -->
        <div class="flex items-center">
            <div class="p-2 bg-blue-100 rounded-full mr-3">
                <svg class="w-5 h-5 text-blue-600 animate-pulse" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <path d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </div>
            <div class="flex-1">
                <p class="text-xs text-gray-500">Components</p>
                <p class="text-sm font-semibold text-gray-800" id="component-count">0 of 6</p>
            </div>
        </div>

        <!-- Price Range -->
        <div class="flex items-center">
            <div class="p-2 bg-green-100 rounded-full mr-3">
                <svg class="w-5 h-5 text-green-600 animate-bounce" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24">
                    <line x1="12" x2="12" y1="2" y2="22"></line>
                    <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
                </svg>
            </div>
            <div class="flex-1">
                <p class="text-xs text-gray-500">Price Range</p>
                <p class="text-sm font-semibold text-gray-800">
                    <span id="lowest-price">$0</span> - <span id="highest-price">$0</span>
                </p>
            </div>
        </div>

        <!-- Power Wattage -->
        <div class="flex items-center">
            <div class="p-2 bg-yellow-100 rounded-full mr-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-yellow-600 animate-bolt" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
            </div>

            <div class="flex-1">
                <p class="text-xs text-gray-500">Power Wattage</p>
                <p class="text-sm font-semibold text-gray-800" id="power-wattage">-- W</p>
            </div>
        </div>

        <!-- Review Build Button -->
        <div class="pt-2">
            <button id="review-build-button"
                    class="w-full inline-flex items-center justify-center px-4 py-2 border border-purple-200
               text-sm font-medium rounded-xl
               bg-gradient-to-r from-purple-500/10 to-purple-600/10 hover:from-purple-500/20 hover:to-purple-600/20
               text-purple-700 hover:text-purple-800
               transition-all duration-200 shadow-sm hover:shadow" disabled>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" stroke="currentColor"
                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
                Review Build
            </button>
        </div>

        <!-- AI Recommendation Section -->
        <div class="bg-white border border-gray-200 rounded-xl p-3 mt-2 space-y-2">
            <div class="flex items-center gap-2 text-purple-700 font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-purple-600 animate-ai-cpu"
                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                     stroke-linejoin="round">
                    <rect x="4" y="4" width="16" height="16" rx="2"></rect>
                    <rect x="9" y="9" width="6" height="6"></rect>
                    <path d="M15 2v2"></path>
                    <path d="M15 20v2"></path>
                    <path d="M2 15h2"></path>
                    <path d="M2 9h2"></path>
                    <path d="M20 15h2"></path>
                    <path d="M20 9h2"></path>
                    <path d="M9 2v2"></path>
                    <path d="M9 20v2"></path>
                </svg>
                <h4 class="text-sm font-semibold">AI Recommendation</h4>
            </div>
            <div class="flex items-center gap-2 text-gray-600 text-sm bg-gray-50 px-3 py-2 rounded-md">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-gray-400" viewBox="0 0 24 24" fill="none"
                     stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="12"></line>
                    <line x1="12" y1="16" x2="12.01" y2="16"></line>
                </svg>
                <p>Add components to receive AI-based suggestions</p>
            </div>
        </div>

    </div>

</div>