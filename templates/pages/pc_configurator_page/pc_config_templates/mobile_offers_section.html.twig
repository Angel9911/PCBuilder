    <div class="vendor-offer bg-white border border-slate-200 rounded-lg p-4 hover:shadow-lg transition-all duration-200 transform hover:scale-[1.01]">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">

            <!-- Logo, Vendor Name, and Stock Status -->
            <div class="flex items-center space-x-4">
                <div class="flex-shrink-0 p-2 bg-gradient-to-br from-white to-slate-50 rounded-md border border-slate-200 shadow-sm">
                    <img class="vendor-logo h-8 w-8 object-contain" src="" alt="">
                </div>
                <div>
                    <h4 class="vendor_name text-base font-medium bg-gradient-to-r from-slate-900 to-slate-700 bg-clip-text text-transparent"></h4>
                    <div class="flex items-center mt-1">
