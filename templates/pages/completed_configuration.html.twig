{% extends 'base.html.twig' %}

{% block title %}PC Completed Builds{% endblock %}

{% block content %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl">
                Готови конфигурации
            </h1>
            <p class="mt-5 max-w-xl mx-auto text-xl text-gray-500">
                Тук може да намерите готови потребителски конфигурации
            </p>
        </div>

        <!-- Builds Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

            {% include 'pages/pages_templates/configuration-template.html.twig' %}
        </div>
        <div class="mt-8 flex justify-center space-x-2">
            {% for i in 1..totalPages %}
                <a href="{{ path('completed.build', {'page': i}) }}"
                   class="px-4 py-2 border {{ i == currentPage ? 'bg-blue-600 text-white' : 'bg-white text-blue-600 hover:bg-blue-100' }} rounded shadow">
                    {{ i }}
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}
