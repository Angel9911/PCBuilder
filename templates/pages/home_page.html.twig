{% extends 'base.html.twig' %}

{% block content %}
    <link rel="stylesheet" href="{{ asset('../css/pc_build_configuration.css') }}">

    <!-- code for spinner -->
    <div id="loading-spinner" class="loading-spinner hidden">
        <div class="spinner"></div>
    </div>

    <div id="slideshow-content">
    <section id="hero-carousel" class="relative h-[600px] overflow-hidden">
        <div id="carousel-slides" class="h-full w-full relative">
            <!-- Slides are injected here -->
        </div>

        <!-- Navigation buttons -->
        <button id="prev-slide" class="absolute top-1/2 left-4 z-30 -translate-y-1/2 text-white bg-black/40 hover:bg-black/60 p-3 rounded-full">
            ←
        </button>
        <button id="next-slide" class="absolute top-1/2 right-4 z-30 -translate-y-1/2 text-white bg-black/40 hover:bg-black/60 p-3 rounded-full">
            →
        </button>

        <!-- Dots -->
        <div id="carousel-dots" class="absolute bottom-6 left-1/2 transform -translate-x-1/2 z-30 flex space-x-2"></div>
    </section>
    </div>

    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">

        <!-- Features Section -->
        <div id="main-content">

            <!-- First Section: Why Choose Our PC Builder -->
            {% include 'pages/home_page_templates/pc_builder_section.html.twig' %}

            <!-- Second Section: -->

        </div>
        <!-- Hidden Questionnaire Section -->
        <div class = "max-w-3xl mx-auto">
            <!-- Questionnaire (Initially Hidden) -->
            <div id="questionnaire" class="hidden bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:px-6">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                        Step <span id="step-number">1</span> of <span id="total-steps"></span>
                    </h3>
                    <div class="mt-2 flex w-full bg-gray-200 rounded-full h-2.5">
                        <div id="progress-bar" class="bg-blue-600 h-2.5 rounded-full transition-all duration-300" style="width: 25%"></div>
                    </div>
                </div>

                <div class="border-t border-gray-200">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 id="question-title" class="text-xl font-semibold text-gray-900 mb-4"></h3>
                        <div id="options" class="space-y-3"></div>
                    </div>
                </div>

                <div class="px-4 py-4 flex justify-between">
                    <button id="prev-btn" class="hidden px-4 py-2 bg-gray-300 text-gray-700 rounded-md hover:bg-gray-400">
                        ⬅ Back
                    </button>
                    <button id="next-btn" class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                        Next ➡
                    </button>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
