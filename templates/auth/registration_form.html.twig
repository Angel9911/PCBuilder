<!-- Register Form (Initially Hidden) -->
<form id="register-form" class="hidden mt-4">
    <div>
        <label>Username:</label>
        <input type="text" class="form-input" placeholder="Choose a username" required>
    </div>

    <div>
        <label>Email Address:</label>
        <input type="email" class="form-input" placeholder="Enter your email..." required>
    </div>

    <div>
        <label>Phone Number:</label>
        <input type="text" class="form-input" placeholder="Your phone number" required>
    </div>

    <div>
        <label>Password:</label>
        <input type="password" class="form-input" placeholder="••••••••" required>
    </div>

    <div>
        <label>Confirm Password:</label>
        <input type="password" class="form-input" placeholder="••••••••" required>
    </div>

    <button type="submit" class="btn-primary">Sign Up</button>

    <div class="divider">OR</div>

    <button class="btn-secondary">
        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo">
        Continue with Google
    </button>
</form>
<!-- End Register Form (Initially Hidden) -->
